@{
  Layout = "_Layout";
}

@using HairSalon.Models;
@model List<HairSalon.Models.Stylist>;

<h2>Current Stylists at Claire's</h2>

@if (@Model.Count == 0)
{
    <h4>No stylists have been added yet!</h4>
} 

@foreach (Stylist stylist in Model)
{
    <div class="well">
    <h5>@Html.ActionLink($"{stylist.Name}", "Details", new { id = stylist.StylistID })</h5>
    </div>
    <hr>
}

<div class="button-wrap">
<a href="/stylists/create"><button class="btn" type="click" name="button">Add New Stylist</button></a>
</div>